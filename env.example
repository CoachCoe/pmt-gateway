# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pmt_gateway?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"

# Polkadot RPC Endpoints
POLKADOT_RPC_ENDPOINTS="wss://rpc.polkadot.io,wss://polkadot.api.onfinality.io/public-ws"

# Price Oracle
COINGECKO_API_KEY="your-coingecko-api-key"
PRICE_UPDATE_INTERVAL="30000"

# Server
PORT=3000
NODE_ENV="development"

# Webhook
WEBHOOK_SECRET="your-webhook-secret-key"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
