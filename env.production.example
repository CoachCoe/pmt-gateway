# Production Environment Configuration
# Copy this to .env and update with your production values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pmt_gateway_prod?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT - CHANGE THESE IN PRODUCTION!
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION"
JWT_EXPIRES_IN="24h"

# Polkadot RPC Endpoints - Production endpoints
POLKADOT_RPC_ENDPOINTS="wss://rpc.polkadot.io,wss://polkadot.api.onfinality.io/public-ws,wss://polkadot-rpc.dwellir.com"

# Price Oracle - Get your API key from CoinGecko
COINGECKO_API_KEY="your-coingecko-api-key-here"
PRICE_UPDATE_INTERVAL="30000"

# Server
PORT=3000
NODE_ENV="production"

# Webhook - CHANGE THIS IN PRODUCTION!
WEBHOOK_SECRET="CHANGE_THIS_TO_A_STRONG_WEBHOOK_SECRET_IN_PRODUCTION"

# CORS - Update with your production domains
CORS_ORIGIN="https://yourdomain.com,https://dashboard.yourdomain.com"

# Rate Limiting - Production settings
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="CHANGE_THIS_TO_A_STRONG_SESSION_SECRET"

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
HEALTH_CHECK_INTERVAL="30000"

# Email (for notifications)
SMTP_HOST="smtp.yourprovider.com"
SMTP_PORT="587"
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@yourdomain.com"

# File Storage
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Feature Flags
ENABLE_WEBHOOKS="true"
ENABLE_ANALYTICS="true"
ENABLE_DEBUG_MODE="false"
